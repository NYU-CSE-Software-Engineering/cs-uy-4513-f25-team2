<div class="row justify-content-center">
  <div class="col-md-8">
    <h1 class="display-5 mb-4">Create Tutor Session</h1>

    <div class="card shadow">
      <div class="card-body p-4">
        <% if @tutor_session && @tutor_session.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <strong>Please fix the following errors:</strong>
            <ul class="mb-0 mt-2">
              <% @tutor_session.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: @tutor_session, url: sessions_path, local: true, class: "needs-validation" do |f| %>
          <div class="mb-3">
            <%= f.label :subject_id, 'Subject', class: "form-label" %>
            <%= f.collection_select :subject_id, @subjects, :id, :name,
                  { prompt: "Select a subject" },
                  { class: "form-select", required: true } %>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :start_at, 'Start Time', class: "form-label" %>
              <%= f.datetime_local_field :start_at, class: "form-control", required: true %>
            </div>

            <div class="col-md-6 mb-3">
              <label class="form-label">Duration</label>
              <div class="d-flex gap-2">
                <div class="input-group">
                  <%= select_tag :duration_hours, options_for_select((0..12).to_a, 1), class: "form-select" %>
                  <span class="input-group-text">Hrs</span>
                </div>
                <div class="input-group">
                  <%= select_tag :duration_minutes, options_for_select([0, 15, 30, 45], 0), class: "form-select" %>
                  <span class="input-group-text">Mins</span>
                </div>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :meeting_link, 'Meeting Link', class: "form-label" %>
            <%= f.text_field :meeting_link, class: "form-control", placeholder: "https://zoom.us/j/123456789", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :capacity, 'Capacity', class: "form-label" %>
            <%= f.number_field :capacity, class: "form-control", placeholder: "e.g., 5", required: true, min: 1 %>
          </div>

          <div class="d-grid">
            <%= f.submit 'Create new session', class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>