<h1>Booking</h1>

<% if flash[:alert] %>
  <div class="alert">
    <p><%= flash[:alert] %></p>
  </div>
<% end %>

<div>
  <p><strong>Subject:</strong> <%= @tutor_session.subject.name %></p>
  <p><strong>Tutor:</strong> <%= @tutor_session.tutor.learner.first_name %> <%= @tutor_session.tutor.learner.last_name %></p>
  <p><strong>Time:</strong> <%= @tutor_session.start_at.strftime('%Y-%m-%d %H:%M') %> - <%= @tutor_session.end_at.strftime('%Y-%m-%d %H:%M') %></p>
  <p><strong>Capacity:</strong> <%= @tutor_session.capacity %></p>
</div>

<%= form_with url: book_session_path(@tutor_session), method: :post, local: true do |f| %>
  <%= f.submit "Confirm Booking" %>
<% end %>
