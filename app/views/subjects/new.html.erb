<div class="row justify-content-center">
  <div class="col-md-6">
    <h1 class="display-5 mb-4">New Subject</h1>

    <div class="card shadow">
      <div class="card-body p-4">
        <% if @subject && @subject.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <strong>Please fix the following errors:</strong>
            <ul class="mb-0 mt-2">
              <% @subject.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: @subject, url: subjects_path, local: true, class: "needs-validation" do |f| %>
          <div class="mb-3">
            <%= f.label :name, 'Name', class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "e.g., Calculus", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :code, 'Code', class: "form-label" %>
            <%= f.text_field :code, class: "form-control", placeholder: "e.g., MATH101", required: true %>
          </div>

          <div class="d-grid">
            <%= f.submit 'Create Subject', class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>