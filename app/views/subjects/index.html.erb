<h1 class="display-5 mb-4">Manage Subjects</h1>

<div class="mb-4">
  <%= link_to "New Subject", new_subject_path, class: "btn btn-primary" %>
</div>

<div class="card shadow">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @subjects.each do |subject| %>
            <tr>
              <td><%= subject.name %></td>
              <td><span class="badge bg-secondary"><%= subject.code %></span></td>
              <td><%= subject.description %></td>
              <td>
                <%= button_to "Delete",
                              subject_path(subject),
                              method: :delete,
                              data: { confirm: "Are you sure you want to archive this subject?" },
                              class: "btn btn-outline-danger btn-sm",
                              form: { style: "display:inline" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
