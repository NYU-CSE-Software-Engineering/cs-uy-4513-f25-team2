<h1 class="display-5 mb-4">Manage Tutor Applications</h1>

<% if @tutor_applications.any? %>
  <div class="row g-4">
    <% @tutor_applications.each do |application| %>
      <div class="col-md-6" id="application_container_<%= application.id %>">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">
              <%= application.learner.first_name %> <%= application.learner.last_name %>
              <span class="badge bg-warning text-dark ms-2"><%= application.status %></span>
            </h5>
            <p class="card-text">
              <strong>Email:</strong> <%= application.learner.email %>
            </p>
            <p class="card-text">
              <strong>Reason:</strong><br>
              <small class="text-muted"><%= application.reason %></small>
            </p>
            <div class="btn-group-custom">
              <%= button_to "Approve", approve_admin_tutor_application_path(application), method: :post, class: "btn btn-success btn-sm" %>
              <%= button_to "Reject", reject_admin_tutor_application_path(application), method: :post, class: "btn btn-danger btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="empty-state">
    <p class="lead">There are no pending applications to review</p>
  </div>
<% end %>

<div class="mt-4">
  <%= link_to "Back to Home", root_path, class: "btn btn-outline-secondary" %>
</div>
