<h1>Sign up</h1>

<% if @learner && @learner.errors.any? %>
  <div id="errors">
    <ul>
      <% @learner.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @learner, url: learners_path, local: true do |f| %>
  <div>
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password, 'Password' %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation, 'Confirm Password' %>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit 'Sign up' %>
<% end %>