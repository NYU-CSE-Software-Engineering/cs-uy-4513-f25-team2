<h1>Apply To Be A Tutor</h1>

<%= form_with model: current_learner.tutor_application || TutorApplication.new, url: tutor_applications_path, local: true do |f| %>
  <div>
    <%= f.label :reason, "Why do you want to become a tutor?" %><br>
    <%= f.text_area :reason, rows: 5, required: true %>
  </div>

  <div>
    <%= f.submit "Submit Application" %>
  </div>
<% end %>