<div class="row justify-content-center">
  <div class="col-md-8">
    <h1 class="display-5 mb-4">Apply To Be A Tutor</h1>

    <div class="card shadow">
      <div class="card-body p-4">
        <%= form_with model: current_learner.tutor_application || TutorApplication.new, url: tutor_applications_path, local: true, class: "needs-validation" do |f| %>
          <div class="mb-3">
            <%= f.label :reason, "Why do you want to become a tutor?", class: "form-label" %><br>
            <%= f.text_area :reason, rows: 5, class: "form-control", placeholder: "Tell us why you'd like to become a tutor...", required: true %>
          </div>

          <div class="d-grid">
            <%= f.submit "Submit Application", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>