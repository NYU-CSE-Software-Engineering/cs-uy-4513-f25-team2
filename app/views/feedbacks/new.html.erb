<h1>Submit Feedback for <%= @tutor.learner.first_name %></h1>

<% if @feedback.errors.any? %>
  <div class="alert" role="alert">
    <% @feedback.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>
<% end %>

<%= form_with model: @feedback, url: feedbacks_path, local: true do |f| %>
  <%= f.hidden_field :tutor_session_id, value: @tutor_session.id %>

  <div>
    <p><strong>Rating</strong></p>
    <% (1..5).each do |n| %>
      <div>
        <%= f.radio_button :score, n, id: "score_#{n}" %>
        <%= f.label "score_#{n}", n.to_s %>
      </div>
    <% end %>
  </div>

  <div>
    <%= f.label :comment, 'Comment' %><br>
    <%= f.text_area :comment %>
  </div>

  <div>
    <%= f.submit 'Submit Feedback' %>
  </div>
<% end %>
